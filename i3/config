# class                 border  backgr. text   indicator child_border
client.focused          $none   $none $none    $none     $greenish-blue
client.focused_inactive $none   $none  $none   $none     $none
client.unfocused        $none   $none  $none   $none     $none
client.urgent           $none   $none  $red    $none     $none
client.placeholder      $none   $none  $none   $none     $none

client.background       $lighter-gray

bar {
        status_command i3status
        position bottom

        separator_symbol "|"
        colors {
          background $dark-gray
          statusline $greenish-blue
          separator $red

        # Class            border      BckGround    text
        focused_workspace  $none       $greenish-blue        $dark-gray
        active_workspace   $red        $none        $none
        inactive_workspace $greenish-blue $dark-gray   $blue-light
        }
}

